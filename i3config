# Basic definitions and appearance
set $mod Mod4
set $scripts $HOME/scripts
set $after_dmenu_focus="i3-msg 'workspace back_and_forth' ; i3-msg 'workspace back_and_forth'"

gaps inner 10
gaps outer 0
for_window [class="^.*"] border pixel 2
font pango:mono 11

# Color setup
	# class                 border  backgr. text    indicator child_border
	client.focused          #4c7899 #285577 #ffffff #c42e14		#c2640c
	client.focused_inactive #333333 #5f676a #ffffff #484e50   #484e50
	client.unfocused        #333333 #222222 #888888 #292d2e   #222222
	client.urgent           #2f343a #900000 #ffffff #900000   #900000
	client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
	client.background       #ffffff

# Status Bar
bar {
	font pango:mono 11
	status_command i3status
	#status command i3blocks
	position bottom

	colors {
		separator		#aaaaaa
    background 	#1b1b1c
		# class							border	backgr.	text
		focused_workspace 	#1b1b1c #a2440c #aaaaaa
		inactive_workspace	#353535	#1b1b1c	#aaaaaa
	}
}

# Dropdown Windows Definitions
for_window [instance="dropdown_*"] floating enable
for_window [instance="dropdown_*"] move scratchpad
for_window [instance="dropdown_*"] sticky enable
for_window [instance="dropdown_calc"] resize set 850 450
for_window [instance="dropdown_term"] resize set 850 600

exec --no-startup-id urxvt -name dropdown_calc -e bpython
exec --no-startup-id urxvt -name dropdown_term

# Workspace Name Definitions
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Special Key Bindings
bindsym $mod+F9 					exec --no-startup-id "$scripts/screenlock && systemctl suspend"
#bindsym $mod+F10
bindsym $mod+F11					exec --no-startup-id "systemctl reboot"
bindsym $mod+F12					exec --no-startup-id "systemctl poweroff"
bindsym $mod+Return 			exec urxvt
bindsym $mod+Tab					workspace next
#bindsym $mod+Backspace		workspace prev
bindsym $mod+Home					workspace $ws1
bindsym $mod+Shift+space	floating toggle
bindsym $mod+space				focus mode_toggle
bindsym $mod+Escape 			reload
bindsym $mod+Shift+Escape exec i3-msg exit
bindsym $mod+Print				exec deepin-screenshot

# Media Keys Bindings
bindsym XF86AudioRaiseVolume 	exec --no-startup-id pactl set-sink-mute 0 0 ; exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume 	exec --no-startup-id pactl set-sink-mute 0 0 ; exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute 				exec --no-startup-id pactl set-sink-mute 0 toggle
bindsym XF86MonBrightnessUp		exec --no-startup-id sudo $scripts/brightness_incr
bindsym XF86MonBrightnessDown	exec --no-startup-id sudo $scripts/brightness_decr
bindcode 246									exec --no-startup-id sudo systemctl restart NetworkManager

# Letter Key Bindings
bindsym $mod+q 					kill
