## Basic definitions and appearance ##
set $mod Mod4
set $scripts $HOME/scripts

gaps inner 10
gaps outer 0
for_window [class="^.*"] border pixel 2
font pango:mono 12

## Color setup ##
	# class                 border  backgr. text    indicator child_border
	client.focused          #a2440c #a2440c #000000 #000000		#a2440c
	client.focused_inactive #333333 #5f676a #ffffff #484e50   #484e50
	client.unfocused        #333333 #222222 #888888 #292d2e   #222222
	client.urgent           #2f343a #900000 #ffffff #900000   #900000
	client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
	client.background       #ffffff

## Status Bar ##
bar {
	font pango:mono 11
	status_command i3status
	#status command i3blocks
	position bottom

	colors {
		separator		#aaaaaa
    background 	#1b1b1c
		# class							border	backgr.	text
		focused_workspace 	#1b1b1c #a2440c #aaaaaa
		inactive_workspace	#353535	#1b1b1c	#aaaaaa
	}
}

## Dropdown Windows Definitions ##
for_window [instance="dropdown_*"] floating enable
for_window [instance="dropdown_*"] move scratchpad
for_window [instance="dropdown_*"] sticky enable
for_window [instance="dropdown_calc"] resize set 850 450
for_window [instance="dropdown_term"] resize set 850 600

exec --no-startup-id urxvt -name dropdown_calc -e bpython
exec --no-startup-id urxvt -name dropdown_term

## Workspace Name Definitions ##
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

## Special Key Bindings ##
bindsym $mod+Return 			exec urxvt
bindsym $mod+Tab					workspace next
#bindsym $mod+Backspace		workspace prev
bindsym $mod+Escape 			reload
bindsym $mod+Shift+Escape exec --no-startup-id "$scripts/prompt 'Do you really want to exit i3?' 'i3-msg exit'"
bindsym $mod+Print				exec deepin-screenshot

## Media Keys Bindings ##
bindsym XF86AudioMute 				exec --no-startup-id "pactl set-sink-mute 0 toggle"
bindsym XF86AudioLowerVolume 	exec --no-startup-id "pactl set-sink-mute 0 0 ; pactl set-sink-volume 0 -5%"
bindsym XF86AudioRaiseVolume 	exec --no-startup-id "pactl set-sink-mute 0 0 ; pactl set-sink-volume 0 +5%"
#bindsym XF86AudioMicMute
bindsym XF86MonBrightnessDown	exec --no-startup-id "sudo $scripts/brightness_decr"
bindsym XF86MonBrightnessUp		exec --no-startup-id "sudo $scripts/brightness_incr"
#bindsym XF86Display
bindsym XF86WLAN							exec --no-startup-id "sudo systemctl restart NetworkManager"
#bindsym XF86Tools
bindsym XF86Search						exec --no-startup-id "$scripts/lockscreen"
bindsym XF86LaunchA			      exec --no-startup-id "$scripts/prompt 'Do you really want to reboot?' 'systemctl reboot'"
bindsym XF86Explorer          exec --no-startup-id "$scripts/prompt 'Do you really want to power off?' 'systemctl poweroff'"

## Letter Key Bindings ##
bindsym $mod+q					[con_id="__focused__" instance="^(?!dropdown_).*$"] kill
#bindsym $mod+Shift+q

bindsym $mod+w					focus parent
bindsym $mod+Shift+w		focus child

bindsym $mod+e					layout toggle split
bindsym $mod+Shift+e		layout tabbed

bindsym $mod+r					exec --no-startup-id "urxvt -e ranger"
#bindsym $mod+Shift+r

bindsym $mod+t					floating toggle
bindsym $mod+Shift+t		focus mode_toggle

bindsym $mod+z 					[instance="dropdown_calc"] scratchpad show ; move position center
bindsym $mod+Shift+z 		[instance="dropdown_term"] scratchpad show ; move position center

bindsym $mod+u					resize shrink width 1 px or 1 ppt
#bindsym $mod+Shift+u

bindsym $mod+i					resize shrink height 1 px or 1 ppt
#bindsym $mod+Shift+i

bindsym $mod+o					resize grow height 1 px or 1 ppt
#bindsym $mod+Shift+o

bindsym $mod+p					resize grow width 1 px or 1 ppt
bindsym $mod+Shift+p		exec --no-startup-id "passmenu ; i3-msg 'workspace back_and_forth' ; i3-msg 'workspace back_and_forth'"

#bindsym $mod+a
#bindsym $mod+Shift+a

#bindsym $mod+s
#bindsym $mod+Shift+s

bindsym $mod+d					exec --no-startup-id i3-dmenu-desktop
bindsym $mod+Shift+d		exec --no-startup-id "urxvt -e $scripts/flalt"

bindsym $mod+f 					fullscreen toggle
bindsym $mod+Shift+f		workspace back_and_forth ; workspace back_and_forth

#bindsym $mod+g
bindsym $mod+Shift+g		exec --no-startup-id "$scripts/togaps"

bindsym $mod+h 					focus left
bindsym $mod+Shift+h 		move left

bindsym $mod+j 					focus down
bindsym $mod+Shift+j 		move down

bindsym $mod+k 					focus up
bindsym $mod+Shift+k 		move up

bindsym $mod+l					focus right
bindsym $mod++Shift+l		move right

#bindsym $mod+y
#bindsym $mod++Shift+y

#bindsym $mod+x
#bindsym $mod++Shift+x

bindsym $mod+c					split h
#bindsym $mod++Shift+c

bindsym $mod+v 					split v
#bindsym $mod+Shift+v

bindsym $mod+b 					exec qutebrowser
#bindsym $mod+Shift+b

#bindsym $mod+n
#bindsym $mod+Shift+n

bindsym $mod+m					exec --no-startup-id "$scripts/mwep $EPFL_DIR ; i3-msg 'workspace back_and_forth' ; i3-msg 'workspace back_and_forth'"
#bindsym $mod+Shift+m
#bindsym $mod+Shift+m		exec --no-startup-id "$scripts/mwep $EPFL_DIR ; i3-msg 'workspace 1'; i3-msg 'workspace 2' ; i3-msg 'workspace previous' ; i3-msg 'workspace previous'"

## Workspace Bindings ##
bindsym $mod+1		workspace $ws1
bindsym $mod+2		workspace $ws2
bindsym $mod+3		workspace $ws3
bindsym $mod+4		workspace $ws4
bindsym $mod+5		workspace $ws5
bindsym $mod+6		workspace $ws6
bindsym $mod+7		workspace $ws7
bindsym $mod+8		workspace $ws8
bindsym $mod+9		workspace $ws9
bindsym $mod+0		workspace $ws10

bindsym $mod+Shift+1		move container to workspace $ws1
bindsym $mod+Shift+2		move container to workspace $ws2
bindsym $mod+Shift+3		move container to workspace $ws3
bindsym $mod+Shift+4		move container to workspace $ws4
bindsym $mod+Shift+5		move container to workspace $ws5
bindsym $mod+Shift+6		move container to workspace $ws6
bindsym $mod+Shift+7		move container to workspace $ws7
