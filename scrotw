#!/bin/sh

if ! [ -d /tmp/screenshots ]
then
	mkdir /tmp/screenshots
fi

date=$(date +"%Y-%m-%d_%T")
tmpname="/tmp/screenshots/$date.png"

scrot -u $tmpname
if [ $? -ne 0 ]
then
	exit
fi
newname=$(i3-input -P 'filename: ' | grep '^output' | sed -e 's/output = //' -e 's/$/.png/')
mv "$tmpname" "$HOME/pics/screenshots/$newname"
