mvep() { mv "$@" "$(du -a -d 3 $EPFL_DIR | awk '{print $2}' | grep -Fv . | fzf)"; }
cpep() { cp "$@" "$(du -a -d 3 $EPFL_DIR | awk '{print $2}' | grep -Fv . | fzf)"; }
zathuratab() { tabbed -c zathura "$@" -e; }
playm() { ffplay "$(find ~/Music -type f | fzf)" &> /dev/null; }
o() { xdg-open "$1" &!; }
