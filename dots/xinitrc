source $HOME/.profile

# Set Keyboard Layout
$SCRIPTS_PATH/setkb
xinput set-prop 11 304 1 													# Enable Tap on Touchpad
xinput set-prop 11 312 1 													# Enable Natural Scroll

# Set screen saver
xset s 300 5
xss-lock -l -n "$SCRIPTS_PATH/dimscreen" -- $SCRIPTS_PATH/lockscreen &

# Set wallpaper and start background programs
$SCRIPTS_PATH/setwp
unclutter &
dunst &
redshift -l 46.5:6.64 -g 0.8 &
pactl set-sink-mute 0 1
exec i3
