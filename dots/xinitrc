xrdb -merge $HOME/.Xresources

# Set Keyboard Layout
$SCRIPTS_PATH/setkb

# Set screen saver
xset s 300 10
xss-lock -l -n "$SCRIPTS_PATH/dimscreen" -- $SCRIPTS_PATH/lockscreen &

# Set wallpaper and start background programs
$SCRIPTS_PATH/setwp
unclutter &
dunst &
redshift -l 46.5:6.64 -g 0.8 &
pactl set-sink-mute 0 1

exec i3
